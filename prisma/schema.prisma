generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model User
model User {
  username String  @id @unique @db.VarChar(100)
  password String  @db.VarChar(100)
  name     String  @db.VarChar(100)
  email    String  @unique @db.VarChar(100)
  token    String? @db.VarChar(1024)

  profiles Profile[] @relation("UserProfiles")
  foods    Foods[]

  @@map("users")
}

enum Gender {
  Laki_Laki
  Perempuan
}

// Model Profile
model Profile {
  id       Int     @id @default(autoincrement())
  age      Int
  gender   Gender
  height   Int
  weight   Int
  kcal     Int?
  bmi      Int?
  username String  @unique @db.VarChar(100)
  name     String  @db.VarChar(100)
  email    String  @unique @db.VarChar(100)
  photoUrl String? @db.VarChar(255)

  user User @relation("UserProfiles", fields: [username], references: [username])

  dashboards Dashboard[]

  @@map("profile")
}

// Enum FoodCategory
enum FoodCategory {
  Makanan_Berat    @map("Makanan Berat")
  Makanan_Ringan   @map("Makanan Ringan")
  Minuman_Non_Soda @map("Minuman Non-Soda")
  Minuman_Bersoda  @map("Minuman Bersoda")
  Minuman_Sehat    @map("Minuman Sehat")
  Produk_Beku      @map("Produk Beku")
}

// Model Foods
model Foods {
  id           Int          @id @default(autoincrement())
  nama_makanan String       @db.VarChar(100)
  category     FoodCategory
  calories     Int
  sugar        Int
  fats         Int
  salt         Int
  date_added   DateTime
  username     String       @db.VarChar(100)
  grade        String?      @db.VarChar(10)
  user         User         @relation(fields: [username], references: [username])

  @@map("foods")
}

// Model Dashboard
model Dashboard {
  id                  Int      @id @default(autoincrement())
  progress_percentage Int
  current_kcal        Int
  calories_goal       Int
  dashboard_time      DateTime
  daily_sugar         Int
  daily_fat           Int
  daily_salt          Int
  bmi                 Int
  // advices             String   @db.VarChar(1024)

  profileId Int
  profile   Profile @relation(fields: [profileId], references: [id])

  @@map("dashboard")
}
